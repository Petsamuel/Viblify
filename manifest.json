{
  "manifest_version": 3,
  "name": "Vibe",
  "version": "1.0",
  "description": "Transform Your Text with One Click, Easily bolden text on LinkedIn, X, and other platforms!",
  "icons": {
    "16": "favicon.png"
  },
  "permissions": ["activeTab", "storage", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "favicon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["unicode.js", "content.js"],
      "css": ["popup.css", "/assets/input.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
