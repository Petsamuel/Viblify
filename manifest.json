{
  "manifest_version": 3,
  "name": "Bold Text Anywhere",
  "version": "1.0",
  "description": "Easily bolden text on LinkedIn, X, and other platforms!",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*.ttf"],
      "matches": ["<all_urls>"]
    }
  ]
}
